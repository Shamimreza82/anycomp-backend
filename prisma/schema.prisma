generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

////////////// 
enum Role {
  HR
  USER
  ADMIN
  MODERATOR
}

model User {
  id                   String                @id @default(uuid())
  fullName             String?               @map("full_name")
  email                String                @unique
  phone                String?               @unique
  isActive             Boolean               @default(true) @map("is_active")
  isEmailVerified      Boolean               @default(false) @map("is_email_verified")
  password             String
  role                 Role                  @default(USER)
  createdAt            DateTime              @default(now()) @map("created_at")
  candidatePersonal    CandidatePersonal? ////done 
  candidateEducations  CandidateEducation[]
  candidateExperiences CandidateExperience[]
  candidateReferences  CandidateReference[]
  candidateLanguages   CandidateLanguage[]
  addresses            Address[]

  @@index([id, email])
  @@map("users")
}

///////////////////////////////////  CandidatePersonal ///////////////////////////////////////////

model CandidatePersonal {
  id              String    @id @default(uuid())
  careerTitle     String?   @map("career_title")
  careerObjective String?   @map("career_objective")
  dob             DateTime?
  fullName        String    @map("full_name")
  fatherName      String?   @map("father_name")
  motherName      String?   @map("mother_name")
  spouseName      String?   @map("spouse_name")
  mobileNo        String?   @map("mobile_no")
  alternatePhone  String?   @map("alternate_phone")
  gender          String
  maritalStatus   String    @map("marital_status")
  nationality     String?
  nationalId      String?   @map("national_id")
  portfolioLink   String?   @map("portfolio_link")

  photo     String?
  signature String?
  resume    String?

  religionId String?
  religion   Religion? @relation(fields: [religionId], references: [id])

  bloodGroupId String?
  bloodGroup   BloodGroup? @relation(fields: [bloodGroupId], references: [id])

  interests Interst[] @relation("CandidateInterests") // many-to-many
  skills    Skill[]   @relation("CandidateSkills") // many-to-many

  socialLink SocialLink[]

  userId String @unique @map("user_id")
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@index([userId])
  @@map("candidate_personals")
}

model Religion {
  id                String              @id @default(uuid())
  name              String
  candidatePersonal CandidatePersonal[]

  @@map("religions")
}

model SocialLink {
  id                  String            @id @default(uuid())
  label               String
  url                 String
  candidatePersonalId String            @map("candidate_personal_id")
  candidatePersonal   CandidatePersonal @relation(fields: [candidatePersonalId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  @@map("social_links")
}

model Interst {
  id                 String              @id @default(uuid())
  interstName        String              @map("interst_name")
  candidatesPersonal CandidatePersonal[] @relation("CandidateInterests")

  @@map("intersts")
}

model Skill {
  id                 String              @id @default(uuid())
  skillName          String              @map("skill_name")
  candidatesPersonal CandidatePersonal[] @relation("CandidateSkills")

  @@map("skills")
}

model BloodGroup {
  id                 String              @id @default(uuid())
  name               String
  candidatePersonals CandidatePersonal[]

  @@map("blood_groups")
}

///////////////////////////////////  CandidatePersonal ///////////////////////////////////////////

///////////////////////////////////  CandidateEducation ///////////////////////////////////////////

model CandidateEducation {
  id          String   @id @default(uuid())
  studyYear   String?  @map("study_year")
  passingYear String?  @map("passing_year")
  resultType  String?  @map("result_type")
  result      String?
  totalCgpa   String?  @map("total_cgpa")
  userId      String   @map("user_id")
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  subjects    Subject?

  @@map("candidate_educations")
}

model Subject {
  id          String  @id @default(uuid())
  subjectName String  @map("subject_name")
  status      Boolean @default(true)

  candidateEducationId String             @unique @map("user_id")
  candidateEducation   CandidateEducation @relation(fields: [candidateEducationId], references: [id], onDelete: Cascade)
}

///////////////////////////////////  Candidate Education ///////////////////////////////////////////

///////////////////////////////////  Candidate Exprience ///////////////////////////////////////////
model CandidateExperience {
  id              String    @id @default(uuid())
  companyName     String    @map("company_name")
  companyBusiness String?   @map("company_business")
  location        String?
  designation     String
  department      String?
  startDate       DateTime  @map("start_date")
  endDate         DateTime? @map("end_date")

  userId String @map("user_id")
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@unique([userId, companyName, designation])
  @@map("candidate_experiences")
}

///////////////////////////////////  Candidate Exprience ///////////////////////////////////////////

///////////////////////////////////  Candidate References ///////////////////////////////////////////

model CandidateReference {
  id          String @id @default(uuid())
  name        String
  companyName String @map("company_name")
  designation String
  phone       String
  email       String

  userId String @map("user_id")
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("candidate_references")
}

///////////////////////////////////  Candidate References ///////////////////////////////////////////

///////////////////////////////////  Candidate Language /////////////////////////////////////////////

model CandidateLanguage {
  id          String @id @default(uuid())
  language    String
  proficiency String

  userId String @map("user_id")
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("candidate_languages")
}

///////////////////////////////////  Candidate Language ///////////////////////////////////////////

///////////////////////////////////  Candidate Address ///////////////////////////////////////////

model AddressType {
  id        String          @id @default(uuid())
  name      AddressTypeEnum
  addresses Address[]

  @@map("address_types")
}

enum AddressTypeEnum {
  PRESENT
  PERMANENT
}

model Address {
  id String @id @default(uuid())

  addressLine String

  divisionId String
  districtId String
  upazilaId  String?

  municipalityId  String?
  unionParishadId String?
  policeStationId String?
  postOfficeId    String?

  wardNo  String?
  zipCode String?

  isCityCorporation Boolean @default(false)
  isSameAsPresent   Boolean @default(false)

  userId        String
  addressTypeId String

  user        User        @relation(fields: [userId], references: [id])
  addressType AddressType @relation(fields: [addressTypeId], references: [id])

  @@unique([userId, addressTypeId])
  @@map("address")
}

model Division {
  id        String   @id @default(uuid())
  geoCode   String?  @map("geo_code")
  name      String
  bnName    String?  @map("bn_name")
  url       String?
  status    Boolean  @default(true)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  districts District[]

  @@map("divisions")
}

model District {
  id         String   @id @default(uuid())
  divisionId String   @map("division_id")
  geoCode    String?  @map("geo_code")
  name       String
  bnName     String?  @map("bn_name")
  lat        Float?
  lon        Float?
  url        String?
  status     Boolean  @default(true)
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  division       Division        @relation(fields: [divisionId], references: [id])
  upazilas       Upazila[]
  policeStations PoliceStation[]
  postOffices    PostOffice[]

  @@map("districts")
}

model Upazila {
  id         String   @id @default(uuid())
  districtId String   @map("district_id")
  geoCode    String?  @map("geo_code")
  name       String
  bnName     String?  @map("bn_name")
  url        String?
  status     Boolean  @default(true)
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  district       District        @relation(fields: [districtId], references: [id])
  municipalities Municipality[]
  unions         UnionParishad[]
  postOffices    PostOffice[]

  @@map("upazilas")
}

model Municipality {
  id        String   @id @default(uuid())
  upazilaId String   @map("upazila_id")
  name      String
  bnName    String?  @map("bn_name")
  status    Boolean  @default(true)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  upazila Upazila @relation(fields: [upazilaId], references: [id])

  @@map("municipalities")
}

model UnionParishad {
  id        String   @id @default(uuid())
  upazilaId String   @map("upazila_id")
  name      String
  bnName    String?  @map("bn_name")
  status    Boolean  @default(true)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  upazila Upazila @relation(fields: [upazilaId], references: [id])

  @@map("union_parishads")
}

model PoliceStation {
  id         String   @id @default(uuid())
  districtId String   @map("district_id")
  geoCode    String?  @map("geo_code")
  url        String?
  bnName     String?  @map("bn_name")
  status     Boolean  @default(true)
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  district District @relation(fields: [districtId], references: [id])

  @@map("police_stations")
}

model PostOffice {
  id         String   @id @default(uuid())
  districtId String   @map("district_id")
  upazilaId  String   @map("upazila_id")
  postOffice String   @map("post_office")
  postCode   String   @map("post_code")
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  district District @relation(fields: [districtId], references: [id])
  upazila  Upazila  @relation(fields: [upazilaId], references: [id])

  @@map("post_offices")
}

