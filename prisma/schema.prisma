generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

////////////// 
enum Role {
  SPECIALIST
  ADMIN
}

model User {
  id              String       @id @default(uuid())
  fullName        String?      @map("full_name")
  email           String       @unique
  phone           String?      @unique
  isActive        Boolean      @default(true) @map("is_active")
  isEmailVerified Boolean      @default(false) @map("is_email_verified")
  password        String
  role            Role         @default(SPECIALIST)
  createdAt       DateTime     @default(now()) @map("created_at")
  specialists     Specialists?

  @@index([id, email])
  @@map("users")
}

enum MediaType {
  IMAGE
  VIDEO
  DOCUMENT
}

enum MimeType {
  JPG
  PNG
  PDF
  MP4
}

enum TierName {
  BASIC
  STANDARD
  PREMIUM
}

enum VerificationStatus {
  PENDING
  APPROVED
  REJECTED
}

model Specialists {
  id                   String             @id @default(uuid())
  averageRating        Decimal            @map("average_rating")
  totalNumberOfRatings Int                @map("total_number_of_ratings")
  verificationStatus   VerificationStatus @default(PENDING) @map("verification_status")
  isVerified           Boolean            @default(true) @map("is_verified")

  userId String @unique @map("user_id")
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  serviceOfferings ServiceOfferings[]

  @@map("specialists")
  @@index([userId])
}

model Media {
  id         String    @id @default(uuid())
  title      String
  fileName   String    @map("file_name")
  fileSize   Int       @map("file_size")
  bucketName String    @map("bucket_name")
  s3Key      String?   @map("s3_key")
  mimeType   MimeType  @map("mime_type")
  mediaType  MediaType @map("media_type")
  uploadedAt DateTime  @map("uploaded_at")

  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")

  @@map("media")
}

model ServiceOfferingsMasterList {
  id           String  @id @default(uuid())
  title        String
  slug         String
  description  String
  displayOrder Int     @map("display_order")
  isDraft      Boolean @map("is_draft")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  serviceOfferings ServiceOfferings[]

  @@map("service_offerings_master_list")
}

model ServiceOfferings {
  id           String  @id @default(uuid())
  title        String
  description  String
  basePrice    Decimal @map("base_price")
  finalPrice   Decimal @map("final_price")
  minValue     Int     @map("min_value")
  maxValue     Int     @map("max_value")
  durationDays Int     @map("duration_days")
  isDraft      Boolean

  specialistId String @map("specialists")
  masterListId String @map("service_offerings_master_list_id")

  specialist Specialists                @relation(fields: [specialistId], references: [id])
  masterList ServiceOfferingsMasterList @relation(fields: [masterListId], references: [id])

  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")

  @@map("service_offerings")
}

model PlatformFee {
  id                    String   @id @default(uuid())
  tierName              TierName @map("tier_name")
  platformFeePercentage Decimal  @map("platform_fee_percentage")
  minValue              Int      @map("min_value")
  maxValue              Int      @map("max_value")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  
  @@map("platform_fee")
}

model Key {
  id  String @id @default(uuid())
  key String

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("key")
}
