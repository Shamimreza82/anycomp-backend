generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

////////////// 
enum Role {
  USER
  SPECIALIST
  ADMIN
}

model User {
  id              String       @id @default(uuid())
  fullName        String?      @map("full_name")
  email           String       @unique
  phone           String?      @unique
  isActive        Boolean      @default(true) @map("is_active")
  isEmailVerified Boolean      @default(false) @map("is_email_verified")
  password        String
  role            Role         @default(USER)
  createdAt       DateTime     @default(now()) @map("created_at")
  specialist      Specialist[]
  platformFees    PlatformFee?

  @@index([id, email])
  @@map("users")
}

enum MimeType {
  JPG
  PNG
  PDF
  MP4
}

enum TierName {
  BASIC
  STANDARD
  PREMIUM
}

enum VerificationStatus {
  PENDING
  APPROVED
  REJECTED
}

model Specialist {
  id                   String             @id @default(uuid())
  title                String
  slug                 String
  description          String?            @db.Text
  averageRating        Decimal?           @map("average_rating")
  isDraft              Boolean            @default(true) @map("is_draft")
  totalNumberOfRatings Int                @default(0) @map("total_number_of_ratings")
  basePrice            Decimal            @map("base_price") @db.Decimal(10, 2)
  platformFee          Decimal            @map("platform_fee") @db.Decimal(10, 2)
  finalPrice           Decimal            @map("final_price") @db.Decimal(10, 2)
  verificationStatus   VerificationStatus @default(PENDING) @map("verification_status")
  isVerified           Boolean            @default(true) @map("is_verified")
  durationDays         Int                @map("duration_days")
  createdAt            DateTime           @default(now()) @map("created_at")
  updatedAt            DateTime           @updatedAt @map("updated_at")
  deletedAt            DateTime?          @map("deleted_at")

  userId String @map("user_id")
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  serviceOffering ServiceOffering[]
  media           Media[]

  @@index([userId])
  @@map("specialists")
}

//////// register as a spaclisist  speclist have some services ///////

model ServiceOffering {
  id           String  @id @default(uuid())
  title        String
  description  String
  basePrice    Decimal @map("base_price")
  finalPrice   Decimal @map("final_price")
  minValue     Int     @map("min_value")
  maxValue     Int     @map("max_value")
  durationDays Int     @map("duration_days")
  isDraft      Boolean @default(true) @map("is_draft")

  specialistId String
  masterListId String
  specialist   Specialist                 @relation(fields: [specialistId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  masterList   ServiceOfferingsMasterList @relation(fields: [masterListId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  media     Media[]
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")

  @@map("service_offerings")
}

model ServiceOfferingsMasterList {
  id           String  @id @default(uuid())
  title        String
  slug         String
  description  String
  displayOrder Int     @map("display_order")
  isDraft      Boolean @default(true) @map("is_draft")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  serviceOfferings ServiceOffering[]

  @@map("service_offerings_master_lists")
}

model Media {
  id         String   @id @default(uuid())
  title      String
  fileName   String   @map("file_name")
  fileSize   Int      @map("file_size")
  bucketName String?  @map("bucket_name")
  s3Key      String?  @map("s3_key")
  url        String
  // mimeType   MimeType?  @map("mime_type")
  uploadedAt DateTime @map("uploaded_at")

  specialistId String
  specialist   Specialist @relation(fields: [specialistId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  createdAt         DateTime         @default(now()) @map("created_at")
  updatedAt         DateTime         @updatedAt @map("updated_at")
  deletedAt         DateTime?        @map("deleted_at")
  serviceOffering   ServiceOffering? @relation(fields: [serviceOfferingId], references: [id])
  serviceOfferingId String?

  @@map("medias")
}

model PlatformFee {
  id                    String   @id @default(uuid())
  tierName              TierName @map("tier_name")
  platformFeePercentage Decimal  @map("platform_fee_percentage")
  minValue              Int      @map("min_value")
  maxValue              Int      @map("max_value")

  userId String @unique @map("user_id")
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("platform_fees")
}

model Key {
  id  String @id @default(uuid())
  key String

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("keys")
}
